<!-- AddUser Section -->
<section id="adduser" class="adduser-section">
  <div class="container d-flex justify-content-center">
    <div class="col-10">
      <div>
        <h1>Add GitHub Account</h1>
      </div>
      <div ng-controller="AddUserController" ng-init="isLoading = false">
        <form name="form" ng-submit="save()" class="adduser-form form-group">
          <div ng-show="error != null" class="alert alert-error">{{error}}</div>
          GitHub Account:</br></br>
          <input type="text" id="name" ng-model="user.name">
          <button type="submit" class="btn btn-large btn-primary">{{isLoading ? 'Loading...' : 'Add Account'}}</button>
        </form>
      </div>
    </div>
  </div>


</section>


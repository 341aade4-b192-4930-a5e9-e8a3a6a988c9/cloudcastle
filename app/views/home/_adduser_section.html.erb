<!-- AddUser Section -->
<section id="adduser" class="adduser-section">
  <div class="container">
    <h1>Add My GitHub Account</h1>
    <div class="row">
      <div class="span6 offset3" ng-controller="AddUserController" ng-init="isLoading = false">
        <form name="form" ng-submit="save()" class="adduser-form">
          <div ng-show="error != null" class="alert alert-error">{{error}}</div>
          GitHub Account:</br></br>
          <input type="text" id="name" ng-model="user.name">
          <button type="submit" class="btn btn-large btn-primary">{{isLoading ? 'Loading...' : 'Добавить'}}</button>
        </form>
      </div>
    </div>
  </div>

  <form>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <p class="form-control-static">email@example.com</p>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="inputPassword" placeholder="Password">
      </div>
    </div>
  </form>



</section>


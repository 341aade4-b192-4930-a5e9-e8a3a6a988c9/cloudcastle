<!-- Status Section -->
<section id="status" class="status-section">
  <div class="container d-flex justify-content-center" ng-controller="StatusesController" ng-init="isLoading = false">
    <div class="col-12">
      <h1>Request Statuses</h1>
      List of users for which metrics are collecting:</br></br>
      <div class="cal-10">
        <div>
          <table class="table status-table">
            <thead>
              <tr>
                <% ['ID', 'Requested At', 'User Name', 'Status'].each do |column_name| %>
                  <th><%= column_name %></th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <tr ng-repeat="status in statuses">
                <% ['{{ status.id }}', '{{ status.created_at }}', '{{ status.name }}', '{{ status.status }}'].each do |value| %>
                  <td><%= value %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <%= link_to "Rating Tables", '#rating', class: "btn btn-large btn-primary" %>
      <button ng-click="refresh()" class="btn btn-large btn-primary">{{isLoading ? 'Loading...' : 'Refresh'}}</button>
    </div>
  </div>
</section>
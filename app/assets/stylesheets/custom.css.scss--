@import "bootstrap";

body {
    width: 100%;
    height: 100%;
}

html {
    width: 100%;
    height: 100%;
}

/* mixins, variables, etc. */

$grayMediumLight: #eaeaea;

@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

/* universal */

html {
  overflow-y: scroll;
}

section {
  overflow: auto;
}

.center {
  text-align: center;
}

/* typography */

h1 {
  font-size: 3em;
  text-align: center;
}

h2 {
  font-size: 1.2em;
  text-align: center;
  font-weight: normal;
  color: #999;
}

p {
  font-size: 1.1em;
  line-height: 1.7em;
}

/* header */

#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.7em;
  color: #fff;
  text-transform: uppercase;
  letter-spacing: -1px;
  padding-top: 9px;
  font-weight: bold;
  line-height: 1;
}

#logo:hover {
  color: #fff;
  text-decoration: none;
}

/* forms */

input, textarea, select, .uneditable-input {
  width: 100%;
}

.home-section {
    min-height: 100%;
    padding: 10% 0;
    text-align: center;
    background: #fff;
}

.adduser-section {
    min-height: 100%;
    padding: 10% 0;
    text-align: center;
    background: #eee;
    @include box_sizing;
}

.rating-section {
    min-height: 100%;
    padding: 10% 0;
    text-align: center;
    background: #fff;
    @include box_sizing;
}

.status-section {
    min-height: 100%;
    padding: 10% 0;
    text-align: center;
    background: #eee;
    @include box_sizing;
}

.table td {
   text-align: center;   
}
.table th {
   text-align: center;   
}